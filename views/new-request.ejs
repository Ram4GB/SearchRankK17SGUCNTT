<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
      integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
      crossorigin="anonymous"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto+Slab&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css"
    />
    <link rel="stylesheet" href="./new-request.css" />
    <title>List Request</title>
  </head>
  <body>
    <div class="container p-3">
      <h3>Form yêu cầu lấy dữ liệu khoa</h3>
      <form>
        <input
          id="username"
          placeholder="Mời bạn điền username"
          type="text"
          name="username"
          value="admin"
        />
        <input
          id="password"
          placeholder="Mời bạn điền password"
          type="password"
          value="admin"
          name="password"
        />
        <input
          id="firstId"
          placeholder="Mời bạn điền firstId"
          type="text"
          value="311741xxx1"
          name="firstId"
        />
        <input
          id="total"
          placeholder="Mời bạn điền total"
          type="text"
          value="1"
          name="total"
        />
        <input
          id="name"
          placeholder="Mời bạn điền name"
          type="text"
          value="Ngành Công nghệ thông tin K17 HK2 2020"
          name="name"
        />
        <input
          id="value"
          placeholder="Mời bạn điền value"
          type="text"
          value="nganh_cntt_k17_hk2_2020"
          name="value"
        />
        <button id="submit" type="button" onclick="submitFunc()">Gửi đi</button>
      </form>

      <table class="table mt-5">
        <tr>
          <th>Tên file</th>
          <th>Filepath</th>
          <th>Mã đầu tiên</th>
          <th>Tổng sinh viên</th>
          <th>Thời gian lấy dữ liệu</th>
        </tr>
        <% data.forEach(function(item){ %>

        <tr>
          <td><%= item.name %></td>
          <td><%= item.value %></td>
          <td><%= item.firstId %></td>
          <td><%= item.total %></td>
          <td><strong style="color: red;">0h30</strong></td>
        </tr>

        <% }) %>
      </table>
    </div>
    <script
      src="https://code.jquery.com/jquery-3.5.1.min.js"
      integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
      crossorigin="anonymous"
    ></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="./script.js"></script>
  </body>
</html>
